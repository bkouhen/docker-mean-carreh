{
    "AWSEBDockerrunVersion": 2,
    "volumes": [
        {
          "name": "static-volume",
          "host": {
            "sourcePath": "/var/app/current/static"
          }
        }
      ],
    "containerDefinitions": [
      {
        "name": "client",
        "image": "bkouhen/docker-mean-client",
        "hostname": "client",
        "essential": false,
        "memory": 128
      },
      {
        "name": "api",
        "image": "bkouhen/docker-mean-api",
        "hostname": "api",
        "essential": false,
        "memory": 128,
        "mountPoints": [
            {
              "sourceVolume": "static-volume",
              "containerPath": "/app/static"
            }
        ]
      },
      {
        "name": "nginx",
        "image": "bkouhen/docker-mean-nginx",
        "hostname": "nginx",
        "essential": true,
        "memory": 128,
        "mountPoints": [
            {
              "sourceVolume": "static-volume",
              "containerPath": "/app/static"
            }
        ],
        "portMappings": [
            {
                "hostPort": 80,
                "containerPort": 80
            }
        ],
        "links": ["client", "api"]
      }
    ]
  }